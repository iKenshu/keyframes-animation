@import "nib"

body
    background #16210B

.u-wrapper
    display flex
    align-items center
    justify-content center
    height 100vh

.PlatziLogo
    width  100px
    height 100px
    transform rotate(45deg)
    position relative
    animation-name logo
    animation-duration 5s



    &-title
        font-family "Open Sans"
        margin-left 20px
        font-size 100px
        color white
        font-weight 600

    &-subtitle
        animation-duration 4s
        animation-name mejorandola        
        color #A3DB3F
        position relative
        top 5px

    &-left
        border 15px solid #97C93E
        border-bottom none
        border-radius 10px 10px 0 0
        box-sizing border-box
        height 65%
        position relative
        top 1px
        width 85%


        

    &-right
        width 100%
        height 35%
        position relative
        border 15px solid #97C93E
        border-top none
        box-sizing border-box
        border-radius 0 0 10px 10px
        


@keyframes logo
    0%
        opacity 0
        transform scale(.1) rotate(0deg)
    50%
        transform scale(1) rotate(405deg)
    100%
        transform scale(1) rotate(405deg)
        opacity 1

@keyframes mejorandola
    0%
        opacity 0
        transform scale(.1)
        margin-bottom 100%
        
    100%
        opacity 1
        transform scale(1)
        